<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_bar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="@dimen/cards_margin"
        android:paddingStart="@dimen/cards_margin"
        android:paddingEnd="@dimen/cards_margin"
        android:paddingBottom="@dimen/fabs_margin">

        <LinearLayout
            android:id="@+id/info_container"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <jahirfiquitiva.libs.kext.ui.widgets.SquaredImageView
                android:id="@+id/info_button"
                android:layout_width="@dimen/viewer_arrow_size"
                android:layout_height="@dimen/viewer_arrow_size"
                android:minHeight="@dimen/viewer_arrow_size"
                android:padding="@dimen/viewer_arrow_padding"
                android:layout_gravity="center_vertical|start"
                android:background="@drawable/ic_go_bg"
                android:scaleType="center"
                android:foreground="?actionBarItemBackground"
                app:srcCompat="@drawable/ic_info"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/download_container"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <jahirfiquitiva.libs.kext.ui.widgets.SquaredImageView
                android:id="@+id/download_button"
                android:layout_width="@dimen/viewer_arrow_size"
                android:layout_height="@dimen/viewer_arrow_size"
                android:minHeight="@dimen/viewer_arrow_size"
                android:padding="@dimen/viewer_arrow_padding"
                android:layout_gravity="center_vertical|start"
                android:background="@drawable/ic_go_bg"
                android:scaleType="center"
                android:foreground="?actionBarItemBackground"
                app:srcCompat="@drawable/ic_download"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/apply_container"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <jahirfiquitiva.libs.kext.ui.widgets.SquaredImageView
                android:id="@+id/apply_button"
                android:layout_width="@dimen/viewer_arrow_size"
                android:layout_height="@dimen/viewer_arrow_size"
                android:minHeight="@dimen/viewer_arrow_size"
                android:padding="@dimen/viewer_arrow_padding"
                android:layout_gravity="center_vertical|start"
                android:background="@drawable/ic_go_bg"
                android:scaleType="center"
                android:foreground="?actionBarItemBackground"
                app:srcCompat="@drawable/ic_apply_wallpaper"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fav_container"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <jahirfiquitiva.libs.kext.ui.widgets.SquaredImageView
                android:id="@+id/fav_button"
                android:layout_width="@dimen/viewer_arrow_size"
                android:layout_height="@dimen/viewer_arrow_size"
                android:minHeight="@dimen/viewer_arrow_size"
                android:padding="@dimen/viewer_arrow_padding"
                android:layout_gravity="center_vertical|start"
                android:background="@drawable/ic_go_bg"
                android:scaleType="center"
                android:foreground="?actionBarItemBackground"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
